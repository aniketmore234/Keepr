{
  "name": "memory-app-mvp",
  "version": "1.0.0",
  "description": "MVP Memory App with Vector Search and AI Analysis",
  "scripts": {
    "backend": "cd backend && npm start",
    "frontend": "cd recallr && npx react-native start",
    "android": "cd recallr && npx react-native run-android",
    "ios": "cd recallr && npx react-native run-ios",
    "setup": "./setup.sh",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "start": "npm run backend"
  },
  "keywords": [
    "memory",
    "ai",
    "vector-search",
    "react-native"
  ],
  "author": "Memory App Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@react-native-community/cli": "latest"
  },
  "dependencies": {
    "@react-native-voice/voice": "^3.2.4",
    "@types/react": "^19.1.6",
    "@types/react-native": "^0.72.8",
    "react-native-paper": "^5.14.5"
  }
}
